{
    grace_period 5s
}

stovoy.dev, www.stovoy.dev {
    encode zstd gzip

    @api path /api/* /healthz /source/*
    reverse_proxy @api backend:8080

    root * /site

    @spa not path /api/* /healthz
    try_files @spa {path} {path}/ /index.html

    file_server
}

stovoy.tech, www.stovoy.tech {
    redir https://stovoy.dev{uri}
}
